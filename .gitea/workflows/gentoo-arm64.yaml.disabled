---
name: C/C++ Makefile CI - arm64
run-name: ${{ gitea.actor }} is building ${{ gitea.repository }} 🚀

on:
  push:
    branches:
      - master
      - develop
  pull_request:
    branches:
      - master

jobs:
  build:
    runs-on: gentoo-arm64

    steps:
      - run: echo "🎉 The job was automatically triggered by a ${{ gitea.event_name }} event."
      - run: echo "🐧 This job is now running on a ${{ runner.os }} server hosted by Gitea!"
      - run: echo "🔎 The name of your branch is ${{ gitea.ref }} and your repository is ${{ gitea.repository }}."

      - name: Checkout
      - uses: actions/checkout@v4
        with:
          submodules: 'true'
          token: "${{ secrets.CLONE_TOKEN }}"
      - run: echo "💡 The ${{ gitea.repository }} repository has been cloned to the runner."

      - name: List files in the repository
        run: |
          ls ${{ gitea.workspace }}
          ls ${{ gitea.workspace }}/src/submodules

      - name: make
        run: make
      - name: Run unit tests
        run: make unit_tests
      - name: Run system tests
        run: make system_tests

      - run: echo "🍏 This job's status is ${{ job.status }}."

      - name: Send a Telegram message on failure
        uses: appleboy/telegram-action@master
        with:
          to: ${{ secrets.TELEGRAM_CHAT_ID }}
          token: ${{ secrets.TELEGRAM_TOKEN }}
        if: ${{ failure() }}
...
